@model IEnumerable<HabilidadesModel>;
<div class="card mt-3">
    <div class="card-header">
        <h4 class="card-title text-primary text-uppercase">Habilidades Técnicas</h4>
    </div>
    <div class="card-body">
        <ul class="list-group">
            @foreach(var item in Model)
            {
                <li class="list-group-item">
                    <div class="fw-bold mb-2">@item.Titulo</div>
                    @foreach(var habilidad in item.Habilidades)
                    {
                        <div class="mb-2">
                            <div class="text-secondary fw-semibold mb-1">@habilidad.Nombre</div>
                            <div class="d-flex flex-wrap gap-2">
                                @foreach(var texto in habilidad.Lista)
                                {
                                    <span class="badge text-bg-primary">@texto</span>
                                }
                            </div>
                        </div>
                    }    
                </li>     
            }
        </ul>
    </div>
</div>